/***** General Form styles  ******/
input, textarea, select {
    color: #000;
    background: #f3f3f9;
    border: 1px solid #669;
}


input:focus, textarea:focus, select:focus {
    background: #fff;
    border: 1px solid #99f;
}

.g-button, .g-tabset a.g-activeTab {
    color: #FFF;
    background: #53a;
}

.g-button {
    border-bottom: 1px solid #333;
    border-right: 1px solid #000;
    border-left: 1px solid #C4C4B8;
    border-top: 1px solid #C4C4B8;
    -moz-border-radius: 5px;
    padding-top: 0; padding-bottom: 0;
    padding-left: 2px; padding-right: 2px;
}

.g-buttonDisable, input:focus.g-buttonDisable {
    color: #000;
    background: grey;
    border: 1px solid #efefff;
    -moz-border-radius: 5px;
    padding-top: 0; padding-bottom: 0;
    padding-left: 2px; padding-right: 2px;
}

.g-selected {
    color: red;
    font-weight: bold;
}

input:hover.g-button, input:focus.g-button {
    background: #370093;
    color: #fff;
}



/****** End general Form Styles *****/

.g-emailMe-box {
    font-size: 8.5pt;
    background: #fdc;
    width: 500px;
    margin: 0 2px 3px;
    -moz-border-radius: 5px;
}

.g-emailMe-box input {
    margin: 1px;
}

.g-emailMe-box legend {
	background-color: #fff2eb;
	border-left: 1px solid #fdc;
	border-right: 1px solid #fdc;
}

.g-columnheader, caption {
    font-weight: bold;
    padding: 2px;
    border: 1px solid #fff;
}

/***************** Styles used in config *******************/

