<mosinstall type="component" version="1.06">
	<name>Gallery</name>
	<creationDate>September, 6th 2006</creationDate>
	<author>Gallery Development Team</author>
	<copyright>This component is released under the Gallery license (GNU General Public License)</copyright>
	<authorEmail>gallery-devel@lists.sourceforge.net</authorEmail>
	<authorUrl>gallery.sourceforge.net</authorUrl>
	<version>1.6</version>
	<description>Gallery Component For Joomla! 1.02 or newer</description>
	<files>
		<filename>gallery.php</filename>
	</files>
	<install>
		<queries>
			<query id="1">CREATE TABLE IF NOT EXISTS `#__gallery16`
			           ( `field` varchar(128) PRIMARY KEY,
				     `value` text default '')
			</query>
			<query id="2">INSERT INTO `#__gallery16` (`field`, `value`)
			           VALUES ('path',          '')
			</query>
			<query id="3">INSERT INTO `#__gallery16` (`field`, `value`)
			           VALUES ('minAuthType',   '20')
			</query>
			<query id="4">INSERT INTO `#__gallery16` (`field`, `value`)
			           VALUES ('hideRightSide', '1')
			</query>
		</queries>
	</install>
	<uninstall>
		<queries>
			<query id="1">DELETE FROM `#__gallery16`;</query>
			<query id="2">DROP TABLE `#__gallery16`;</query>
		</queries>
	</uninstall>
	<administration>
		<menu link="option=com_gallery16">Gallery</menu>
		<files>
			<filename>admin.gallery.php</filename>
			<filename>admin.gallery.html.php</filename>
			<filename>toolbar.gallery.php</filename>
		</files>
		<images>
			<filename>images/logo-228x67.png</filename>
		</images>
        </administration>
</mosinstall>
